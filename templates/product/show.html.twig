{% extends "admin/bars.html.twig" %}

{% block title %}Product{% endblock %}

{% block contentpage %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ product.id }}</td>
            </tr>
            <tr>
                <th>BillyId</th>
                <td>{{ product.billyId }}</td>
            </tr>
            <tr>
                <th>OrganizationId</th>
                <td>{{ product.organizationId }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
            <tr>
                <th>AccountId</th>
                <td>{{ product.accountId }}</td>
            </tr>
            <tr>
                <th>ProductNo</th>
                <td>{{ product.productNo }}</td>
            </tr>
            <tr>
                <th>SuppliersProductNo</th>
                <td>{{ product.suppliersProductNo }}</td>
            </tr>
            <tr>
                <th>SalesTaxRulesetId</th>
                <td>{{ product.salesTaxRulesetId }}</td>
            </tr>
            <tr>
                <th>IsArchived</th>
                <td>{{ product.isArchived ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsInInventory</th>
                <td>{{ product.isInInventory ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ImageId</th>
                <td>{{ product.imageId }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ product.imageUrl }}</td>
            </tr>
            <tr>
                <th>ExternalId</th>
                <td>{{ product.externalId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('product_index') }}" class="btn btn-info">back to list</a>

    <a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-dark">edit</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}
